<Window x:Class="SpeckleGSAUI.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SpeckleGSAUI"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="450">
    <Grid
        Background="#FF0057FF">
        <Grid.RowDefinitions>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="auto"/>
        </Grid.RowDefinitions>

        <TextBlock
            Grid.Row="0"
            Width="97"
            Height="29"
            HorizontalAlignment="Left"
            VerticalAlignment="Top"
            Margin="23,15,0,0"
            FontSize="24"
            FontWeight="Bold"
            Foreground="White"
            Text="Speckle!"
            TextWrapping="Wrap" />
        <Grid
            Grid.Row="1"
            Margin="25,25,25,0">
            <TabControl
                x:Name="TabControl">
                <TabItem Header="Server Settings">
                    <StackPanel
                        Margin="10,10,10,10">
                        <TextBlock
                            HorizontalAlignment="Left"
                            Text="Server:"/>
                        <TextBox
                            x:Name="ServerAddress"/>
                        <Separator Height="10" Background="Transparent"/>
                        <TextBlock
                            HorizontalAlignment="Left"
                            Text="Email:"/>
                        <TextBox
                            x:Name="EmailAddress"/>
                        <Separator Height="10" Background="Transparent"/>
                        <TextBlock
                            HorizontalAlignment="Left"
                            Text="Password:"/>
                        <PasswordBox
                            x:Name="Password"/>
                        <Separator Height="10" Background="Transparent"/>
                        <Button
                            Click="Login"
                            Content="Login"/>
                    </StackPanel>
                </TabItem>
                <TabItem Header="GSA">
                    <StackPanel
                        Margin="10,10,10,10">
                        <Button
                            Click="LinkGSA"
                            Content="Link to GSA"/>
                        <Separator Height="10" Background="Transparent"/>
                        <Button
                            Click="NewGSAFile"
                            Content="New File"/>
                        <Separator Height="10" Background="Transparent"/>
                        <Button
                            Click="OpenGSAFile"
                            Content="Open File"/>
                    </StackPanel>
                </TabItem>
                <TabItem Header="Sender">
                    <StackPanel
                        Margin="10,10,10,10">
                        <TextBlock
                            HorizontalAlignment="Left"
                            Text="Stream Name:"/>
                        <TextBox
                            TextChanged="UpdateStreamName"
                            x:Name="SenderStreamName"/>
                        <Separator Height="10" Background="Transparent"/>
                        <TextBlock
                            HorizontalAlignment="Left"
                            Text="StreamID:"/>
                        <TextBox
                            IsReadOnly="True"
                            x:Name="SenderStreamID"/>
                        <Separator Height="10" Background="Transparent"/>
                        <CheckBox
                            Checked="SenderOn"
                            Unchecked="SenderOff"
                            x:Name="ToggleSender"
                            Content="Send"/>
                        <Separator Height="10" Background="Transparent"/>
                        <CheckBox
                            x:Name="SendDesignLayer"
                            Content="Design Layer"/>
                        <CheckBox
                            x:Name="SendAnalysisLayer"
                            Content="Analysis Layer"/>
                    </StackPanel>
                </TabItem>
                <TabItem Header="Receiver">
                    <StackPanel
                        Margin="10,10,10,10">
                        <TextBlock
                            HorizontalAlignment="Left"
                            Text="Stream Name:"/>
                        <TextBox
                            IsReadOnly="True"
                            TextChanged="UpdateStreamName"
                            x:Name="ReceiverStreamName"/>
                        <Separator Height="10" Background="Transparent"/>
                        <TextBlock
                            HorizontalAlignment="Left"
                            Text="StreamID:"/>
                        <TextBox
                            x:Name="ReceiverStreamID"/>
                        <Separator Height="10" Background="Transparent"/>
                        <CheckBox
                            Checked="ReceiverOn"
                            Unchecked="ReceiverOff"
                            x:Name="ToggleReceiver"
                            Content="Receive"/>
                    </StackPanel>
                </TabItem>
            </TabControl>
        </Grid>
        <Grid
            Grid.Row="2"
            Margin="25,0,25,25">
            <ScrollViewer
                Height="100">
                <TextBlock
                    x:Name="Messages"
                    Background="White"
                    FontFamily="Consolas"
                    Padding="10"
                    />
            </ScrollViewer>
        </Grid>
    </Grid>
</Window>
