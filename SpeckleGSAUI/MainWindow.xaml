<Window x:Class="SpeckleGSAUI.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SpeckleGSAUI"
        mc:Ignorable="d"
        Title="SpeckleGSA" x:Name="SpeckleGSAUI" Height="878" Width="584" WindowStyle="SingleBorderWindow">
    <Grid
        Background="#FF0057FF" Margin="0,0,0,0">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="12*"/>
            <ColumnDefinition Width="5*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="auto"/>
        </Grid.RowDefinitions>

        <TextBlock
            Grid.Row="0"
            Width="97"
            Height="29"
            HorizontalAlignment="Left"
            VerticalAlignment="Top"
            Margin="23,15,0,0"
            FontSize="24"
            FontWeight="Bold"
            Foreground="White"
            Text="Speckle!"
            TextWrapping="Wrap" />
        <Grid
            Grid.Row="1"
            Margin="25,25,25,5" Grid.ColumnSpan="2">
            <TabControl
                x:Name="TabControl">
                <TabItem Header="Server Settings">
                    <StackPanel
                        Margin="10,10,10,10">
                        <TextBlock
                            HorizontalAlignment="Left"
                            Text="Server:"/>
                        <TextBox
                            x:Name="ServerAddress"/>
                        <Separator Height="10" Background="Transparent"/>
                        <TextBlock
                            HorizontalAlignment="Left"
                            Text="Email:"/>
                        <TextBox
                            x:Name="EmailAddress"/>
                        <Separator Height="10" Background="Transparent"/>
                        <TextBlock
                            HorizontalAlignment="Left"
                            Text="Password:"/>
                        <PasswordBox
                            x:Name="Password"/>
                        <Separator Height="10" Background="Transparent"/>
                        <Button
                            Click="Login"
                            Content="Login"/>
                    </StackPanel>
                </TabItem>
                <TabItem Header="Speckle">
                    <Grid
                        Margin="10,10,10,10">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="auto"/>
                            <RowDefinition Height="*"/>
                            <RowDefinition Height="auto"/>
                            <RowDefinition Height="auto"/>
                        </Grid.RowDefinitions>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <GroupBox
                            Header="Speckle Settings"
                            Grid.Row="0"
                            Grid.ColumnSpan="2">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="auto"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="auto"/>
                                    <RowDefinition Height="auto"/>
                                </Grid.RowDefinitions>
                                <Label Grid.Row="0" Grid.Column="0" Content="Project Name"/>
                                <TextBox Grid.Row="0" Grid.Column="1" Text="{Binding Path=ProjectName}" Margin="2,2,2,2"/>
                                <Button Grid.Row="1" Grid.ColumnSpan="2" Click="UpdateStreamList"  Content="Update Stream List" Margin="2,2,2,2"/>
                            </Grid>
                        </GroupBox>
                        <DataGrid
                            Grid.Row="1"
                            Grid.ColumnSpan="2"
                            Margin="5,5,5,5"
                            CanUserSortColumns="False"
                            AutoGenerateColumns="False"
                            ItemsSource="{Binding StreamData}">
                            <DataGrid.Columns>
                                <DataGridTextColumn Header="Name" Width="*" Binding="{Binding Item1}"/>
                                <DataGridTextColumn Header="StreamID" Width="2*" Binding="{Binding Item2}"/>
                            </DataGrid.Columns>
                        </DataGrid>
                        <GroupBox
                            Header="GSA "
                            Grid.Row="2"
                            Grid.ColumnSpan="2">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="auto"/>
                                    <RowDefinition Height="auto"/>
                                    <RowDefinition Height="auto"/>
                                </Grid.RowDefinitions>
                                <Button Grid.Row="0" Content="Link GSA" Click="LinkGSA" Margin="2,2,2,2"/>
                                <Button Grid.Row="1" Content="New File" Click="NewGSAFile" Margin="2,2,2,2"/>
                                <Button Grid.Row="2" Content="Open File" Click="OpenGSAFile" Margin="2,2,2,2"/>
                            </Grid>
                        </GroupBox>
                        <GroupBox
                            Header="Sender"
                            Grid.Row="3"
                            Grid.Column="0">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="auto"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="auto"/>
                                    <RowDefinition Height="auto"/>
                                    <RowDefinition Height="auto"/>
                                    <RowDefinition Height="auto"/>
                                </Grid.RowDefinitions>
                                <Label Grid.Row="0" Grid.Column="0" Content="Nodes"/>
                                <TextBox Grid.Row="0" Grid.Column="1" x:Name="SenderNodeStreamID" IsReadOnly="True" BorderThickness="0" Margin="2,2,2,2"/>
                                <Label Grid.Row="1" Grid.Column="0" Content="Section Properties"/>
                                <TextBox Grid.Row="1" Grid.Column="1" x:Name="SenderSectionStreamID" IsReadOnly="True" BorderThickness="0" Margin="2,2,2,2"/>
                                <Label Grid.Row="2" Grid.Column="0" Content="Elements"/>
                                <TextBox Grid.Row="2" Grid.Column="1" x:Name="SenderElementStreamID" IsReadOnly="True" BorderThickness="0" Margin="2,2,2,2"/>
                                <Button Grid.Row="3" Grid.ColumnSpan="2" Content="Send/Update Streams" Click="SendStream" Margin="2,2,2,2"/>
                            </Grid>
                        </GroupBox>
                        <GroupBox
                            Header="Receiver"
                            Grid.Row="3"
                            Grid.Column="1">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="auto"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="auto"/>
                                    <RowDefinition Height="auto"/>
                                    <RowDefinition Height="auto"/>
                                    <RowDefinition Height="auto"/>
                                </Grid.RowDefinitions>
                                <Label Grid.Row="0" Grid.Column="0" Content="Nodes"/>
                                <TextBox Grid.Row="0" Grid.Column="1" Text="{Binding Path=ReceiverNodeStreamID}" Margin="2,2,2,2"/>
                                <Label Grid.Row="1" Grid.Column="0" Content="Section Properties"/>
                                <TextBox Grid.Row="1" Grid.Column="1" Text="{Binding Path=ReceiverSectionStreamID}" Margin="2,2,2,2"/>
                                <Label Grid.Row="2" Grid.Column="0" Content="Elements"/>
                                <TextBox Grid.Row="2" Grid.Column="1" Text="{Binding Path=ReceiverElementStreamID}" Margin="2,2,2,2"/>
                                <Button Grid.Row="3" Grid.ColumnSpan="2" Content="Receive Streams" Click="ReceiveStream" Margin="2,2,2,2"/>
                            </Grid>
                        </GroupBox>
                    </Grid>
                </TabItem>
            </TabControl>
        </Grid>
        <Grid
            Grid.Row="2"
            Margin="25,5,25,25" Grid.ColumnSpan="2">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>
            <Label
                Grid.Row="0"
                Foreground="White"
                FontWeight="Medium"
                Content="Message Log"/>
            <ListBox
                Grid.Row="1"
                Height="100"
                x:Name="MessagePane"
                ItemsSource="{Binding Path=Messages}">
                <ListBox.Resources>
                    <DataTemplate x:Key="MessageItem">
                        <Label x:Name="MessageLine" Content="{Binding}"/>
                    </DataTemplate>
                </ListBox.Resources>
            </ListBox>
        </Grid>
    </Grid>
</Window>
